---
// Component imports and setup JavaScript go here!
import BaseLayout from "../layouts/BaseLayout.astro";
import ButtonLogout from "../components/ButtonLogout.svelte";

const title = "Main Page";
---
<script>
	// A simple navigation guard based on localStorage items
	if(!localStorage.getItem("authentication_token")) {
		location.replace("/login");
	}
</script>

<BaseLayout title={title}>
	<div slot="main" class="min-w-full min-h-screen flex flex-col justify-center items-center" >
		<h1 class="text-3xl font-semibold mb-4">Welcome to <a href="https://astro.build/">Astro</a> - with simple Authentication</h1>
		<!-- Need hydration -->
		<ButtonLogout client:visible></ButtonLogout>
	</div>
</BaseLayout>